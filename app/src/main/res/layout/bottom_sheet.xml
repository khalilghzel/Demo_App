<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:paddingTop="@dimen/spacing_medium"
    android:paddingBottom="@dimen/spacing_medium">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="100dp"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@color/grey_100" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/cairo_bold"
                    android:text="Nike R Max 3210"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/quicksand_regular"
                    android:text="By Nike"
                    android:textColor="@color/grey_700"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/cairo_bold"
                    android:text="320 $"
                    android:gravity="center"
                    android:textColor="@color/premium"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:drawableLeft="@drawable/ic_baseline_star_24"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="4.3"
                    android:textColor="@color/grey_700"
                    android:textSize="11sp" />


            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="15dp" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Size: "
                    android:textColor="@color/grey_700"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/nbr1"
                    style="@style/Button.Primary.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/clickable_btn"
                    android:fontFamily="@font/quicksand_bold"
                    android:padding="5dp"
                    android:text="39"
                    android:textColor="@color/grey_700" />

                <Button
                    android:id="@+id/nbr2"
                    style="@style/Button.Primary.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/clickable_btn"
                    android:fontFamily="@font/quicksand_bold"
                    android:padding="5dp"
                    android:text="40"
                    android:textColor="@color/grey_700" />

                <Button
                    android:id="@+id/nbr3"
                    style="@style/Button.Primary.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/clickable_btn"
                    android:fontFamily="@font/quicksand_bold"
                    android:padding="5dp"
                    android:text="41"
                    android:textColor="@color/grey_700" />

                <Button
                    android:id="@+id/nbr4"
                    style="@style/Button.Primary.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/clickable_btn"
                    android:fontFamily="@font/quicksand_bold"
                    android:padding="5dp"
                    android:text="42"
                    android:textColor="@color/grey_700" />
            </LinearLayout>

        </HorizontalScrollView>


        <View
            android:layout_width="0dp"
            android:layout_height="15dp" />


        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:fontFamily="@font/quicksand_bold"
                    android:text="Color: "
                    android:textColor="@color/grey_700"
                    android:textSize="18sp" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_color_blue"
                    android:layout_width="@dimen/spacing_xmlarge"
                    android:layout_height="@dimen/spacing_xmlarge"
                    android:layout_margin="@dimen/spacing_middle"
                    android:clickable="true"
                    android:onClick="setColor"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/indigo_500"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:rippleColor="@android:color/white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_color_pink"
                    android:layout_width="@dimen/spacing_xmlarge"
                    android:layout_height="@dimen/spacing_xmlarge"
                    android:layout_margin="@dimen/spacing_middle"
                    android:clickable="true"
                    android:onClick="setColor"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/pink_700"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:rippleColor="@android:color/white"
                    app:srcCompat="@drawable/ic_done" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_color_grey"
                    android:layout_width="@dimen/spacing_xmlarge"
                    android:layout_height="@dimen/spacing_xmlarge"
                    android:layout_margin="@dimen/spacing_middle"
                    android:clickable="true"
                    android:onClick="setColor"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/grey_500"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:rippleColor="@android:color/white" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fab_color_green"
                    android:layout_width="@dimen/spacing_xmlarge"
                    android:layout_height="@dimen/spacing_xmlarge"
                    android:layout_margin="@dimen/spacing_middle"
                    android:clickable="true"
                    android:onClick="setColor"
                    android:tint="@android:color/white"
                    app:backgroundTint="@color/green_500"
                    app:elevation="0dp"
                    app:fabSize="mini"
                    app:rippleColor="@android:color/white" />

            </LinearLayout>

        </HorizontalScrollView>
        <View
            android:layout_width="0dp"
            android:layout_height="15dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:fontFamily="@font/quicksand_bold"
            android:text="Description: "
            android:textColor="@color/grey_700"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksand_regular"
            android:textSize="12sp"
            android:text="@string/dummy_text"
            android:layout_margin="4dp"
            android:textColor="@color/grey_500"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>